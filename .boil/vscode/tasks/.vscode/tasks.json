{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "boil: template",
			"type": "shell",
			"command": "boil",
			"args": [
				"-v",
				"-r",
				"${workspaceFolder/.boil}"
			],
			"options": {
				"cwd": "${fileDirname}",
				"env": {},
			},
			"presentation": {
				"clear": true,
				"close": false,
				"echo": true,
				"focus": false,
				"panel": "shared",
				"reveal": "silent",
				"revealProblems": "onProblem",
				"showReuseMessage": false
			},
			"group": {
				"kind": "build"
			},
			"problemMatcher": []
		}
	]
}