	"version": "0.2.0",
	"configurations": [
		{
			"name": "boil",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/boil",
			"args": [
				"--config=${workspaceFolder}/cmd/boil/config.json",
				"--repository=${workspaceFolder}/_testdata/templates"
			],
		},
		{
			"name": "boil help",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/boil",
			"args": [
				"-h"
			]
		},
		{
			"name": "boil exec",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/boil",
			"args": [
				"-v",
				"exec",
				"-w",
				"apps/cliapp:all",
				"--target-dir=${workspaceFolder}/_testdata/output/cliapp",
				"--var=a=1",
				"--var=b=2",
				"--var=c=3"
			]
		},
		{
			"name": "boil list",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/boil",
			"args": [
				"-v",
				"list"
			]
		}
	]
}